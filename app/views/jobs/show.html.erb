<% job = data['job'] %>

<h1>
  <%= job.company_name %>
  <% if job.title.present? %>
    <small><%= job.title %></small>
  <% end %>
</h1>

<p>
  <%= link_to 'Edit Job', edit_job_path(data['job'].id) %>
  |
  <%= link_to 'Delete Job', job_path(data['job'].id), method: :delete, data: { confirm: 'Are you sure?' } %>
</p>

<p>
  <strong>Type:</strong>
  <%= job.job_type.titleize %>
</p>

<p>
  <strong>Source:</strong>
  <%= job.source %>
</p>

<% if job.recruiter_name.present? %>
  <p>
    <strong>Recruiter:</strong>
    <%= job.recruiter_name %>
    <% if job.recruiter_agency.present? %>
      (<%= job.recruiter_agency %>)
    <% end %>
<% end %>

<p>
  <strong>Time Period:</strong>
  <%= job.time_period.formatted %>
</p>

<% if job.notes.present? %>
  <p><strong>Notes:</strong></p>

  <% job.notes.split(/(\r?\n){2,}/).each do |paragraph| %>
    <p><%= paragraph.gsub(/\r?\n/, '') %></p>
  <% end %>
<% end %>

<p><%= link_to 'Back To Jobs', jobs_path %></p>
